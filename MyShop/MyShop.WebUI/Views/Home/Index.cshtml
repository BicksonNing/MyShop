@model IEnumerable<MyShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

@foreach (var item in Model)
{
    <div class="col-md-4" style="height:450px;padding:10px;margin:10px;border:solid thick whitesmoke">
        <div class="col-md-12">
            <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
        </div>
    </div>
}